@ARTICLE{Mesnil-et-al-PRAM-AISC2015,
     author = {Mesnil, Gr{\'{e}}goire and Rifai, Salah and Bordes, Antoine and Glorot, Xavier and Bengio, Yoshua and Vincent, Pascal},
