@TECHREPORT{Vincent-TR1316,
       author = {Vincent, Pascal and Larochelle, Hugo and Bengio, Yoshua and Manzagol, Pierre-Antoine},
        month = feb,
        title = {Extracting and Composing Robust Features with Denoising Autoencoders},
       number = {1316},
